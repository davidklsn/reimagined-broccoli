{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "frontend/**/*.ts",
    "frontend/**/*.tsx"
  ]
}
